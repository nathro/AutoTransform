{
    "repo": {
        "name": "github",
        "base_branch_name": "<BASE BRANCH>",
        "full_github_name": "<GITHUB REPO>"
    },
    "runner": {
        "name": "github",
        "run_workflow": "autotransform.run.yml",
        "update_workflow": "autotransform.update.yml"
    },
    "steps": [
        {
            "name": "conditional",
            "action": "merge",
            "condition": {
                "name": "change_state",
                "comparison": "eq",
                "state": "approved"
            },
            "continue_if_passed": false
        },
        {
            "name": "conditional",
            "action": "abandon",
            "condition": {
                "name": "change_state",
                "comparison": "eq",
                "state": "changes_requested"
            },
            "continue_if_passed": false
        }
    ]
}